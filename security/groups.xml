    <field name="name">SCM User</field>
    <field name="category_id" ref="base.module_category_human_resources"/>
  </record>
  <record id="group_scm_manager" model="res.groups">
    <field name="name">SCM Manager</field>
    <field name="category_id" ref="base.module_category_human_resources"/>
