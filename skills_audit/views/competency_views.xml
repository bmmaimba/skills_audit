<odoo>
  <record id="view_competency_tree" model="ir.ui.view">
    <field name="name">scs.competency.tree</field>
    <field name="model">scs.competency</field>
    <field name="arch" type="xml">
      <tree>
        <field name="code"/>
        <field name="cluster_id"/>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="view_competency_form" model="ir.ui.view">
    <field name="name">scs.competency.form</field>
    <field name="model">scs.competency</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="code"/>
            <field name="name"/>
            <field name="cluster_id"/>
            <field name="definition"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_competency_search" model="ir.ui.view">
        <field name="name">competency.search.view</field>
        <field name="model">scs.competency</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <field name="cluster_id"/>
                <!-- <filter date="create_date" name="filter_create_date" string="Create Date"/> -->
                <!-- <filter date="update_date" name="filter_update_date" string="Update Date"/> -->
                <separator/>
                <filter string="My Competencies" name="my_competencies_filter"
                    domain="['|', ('cluster_id', '=', uid), ('create_uid', '=', uid)]"/>
                <filter string="Cluster" name="groupby_cluster_id"
                        context="{'group_by':'cluster_id'}" domain="[]"/>
            </search>
        </field>
    </record>

</odoo>
