<odoo>
  <!-- Actions: declare before menuitems -->
  <menuitem id="menu_scs_root"
            name="SCM Skills Audit"
            sequence="10"
            web_icon="static/description/icon.png"/>

  <menuitem id="menu_scs_data"
            name="Skills Audit Data"
            parent="menu_scs_root"
            sequence="20"/>

  <menuitem id="menu_scs_operations"
            name="Skills Audit Operations"
            parent="menu_scs_root"
            sequence="30"/>
  <menuitem id="menu_profiles"
            name="Skills Audit Employee Profiles"
            parent="menu_scs_operations"
            action="action_profiles"/>
  <menuitem id="menu_assessments"
            name="Skills Audit Assessments"
            parent="menu_scs_operations"
            action="action_assessments"/>
  <menuitem id="menu_training"
            name="Skills Audit Training Actions"
            parent="menu_scs_operations"
            action="action_training"/>

  <menuitem id="menu_scs_config"
            name="Configuration"
            parent="menu_scs_root"
            sequence="90"/>
  <menuitem id="menu_roles"
            name="Skills Audit Job Roles"
            parent="menu_scs_config"
            action="action_roles"
            sequence="1"/>
  <menuitem id="menu_clusters"
            name="Skills Audit Clusters"
            parent="menu_scs_config"
            action="action_clusters"
            sequence="2"/>
  <menuitem id="menu_competencies"
            name="Skills Audit Competencies"
            parent="menu_scs_config"
            action="action_competencies"
            sequence="3"/>

  <record id="action_clusters" model="ir.actions.act_window">
    <field name="name">Skills Audit Clusters</field>
    <field name="res_model">scs.cluster</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Manage Skills Audit Competency Clusters.
      </p>
    </field>
  </record>

  <record id="action_competencies" model="ir.actions.act_window">
    <field name="name">Skills Audit Competencies</field>
    <field name="res_model">scs.competency</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_roles" model="ir.actions.act_window">
    <field name="name">Skills Audit Job Roles</field>
    <field name="res_model">scs.job.role</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_profiles" model="ir.actions.act_window">
    <field name="name">Skills Audit Employee Profiles</field>
    <field name="res_model">scs.employee.profile</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_assessments" model="ir.actions.act_window">
    <field name="name">Skills Audit Assessments</field>
    <field name="res_model">scs.assessment</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_training" model="ir.actions.act_window">
    <field name="name">Skills Audit Training Actions</field>
    <field name="res_model">scs.training.action</field>
    <field name="view_mode">tree,form</field>
  </record>

 </odoo>
